---
import { info } from "@data";
import { Icon } from "astro-icon";

import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";
import IconWithText from "@components/general/IconWithText.astro";

const Projects = info.projects.map((project) => project);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Projects"}
      description={"All projects are available in this page."}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>
  <body>
    <Layout>
      <div class="flex flex-col gap-16 dark:text-light">
        <h1 class="dark:text-light">Projects</h1>
        <div class="flex items-center">
          <div class="dark:text-light text-xl flex gap-1 flex-wrap">
            {"Please check out more on my GitHub profile: "}
            <span>
              <a
                class="dark:text-light link transition-all duration-200"
                href={info.socialMedia.github}
              >
                <IconWithText
                  pack="mdi"
                  name="github"
                  text="github.com/AidenKwong"
                  size={28}
                />
              </a></span
            >

            .
          </div>
        </div>

        <ProjectsWrapper projects={Projects} />
      </div>
    </Layout>
  </body>
</html>
