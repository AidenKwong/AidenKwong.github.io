  <a aria-label="GitHub" href={info.socialMedia.github} target="_blank">
    <Icon
      pack="mdi"
      name="github"
      size="40"
      class="dark:text-light link hover:scale-110 transition-all duration-200"
    />
  </a>
  <a aria-label="LinkedIn" href={info.socialMedia.linkedin} target="_blank">
    <Icon
      pack="mdi"
      name="linkedin"
      size="40"
      class="dark:text-light link hover:scale-110 transition-all duration-200"
    />
  </a>
  <a
    aria-label="Email"
    href={"mailto:" + info.socialMedia.email}
    target="_blank"
  >
    <Icon
      pack="mdi"
      name="email"
      size="40"
      class="dark:text-light link hover:scale-110 transition-all duration-200"
    />
  </a>
